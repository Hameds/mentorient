@model mentorient.Models.ViewModels.AccountingEntryViewModel


@{
    ViewData["Title"] = "Create Accounting Entry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<form class="form-horizontal" method="post" asp-action="Save" asp-controller="Accounting">
    <fieldset>
        <legend>New Accounting Entry</legend>
        <div class="form-group">
            <label asp-for="DateDue" class="col-lg-2 control-label"></label>
            <div class="col-lg-10">
                <input type="date" class="form-control" asp-for="DateDue">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DatePaid" class="col-lg-2 control-label"></label>
            <div class="col-lg-10">
                <input type="date" class="form-control" asp-for="DatePaid">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="AmountDue" class="col-lg-2 control-label"></label>
            <div class="col-lg-10">
                <input type="number" class="form-control" asp-for="AmountDue"/>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="AmountPaid" class="col-lg-2 control-label"></label>
            <div class="col-lg-10">
                <input type="number" class="form-control" asp-for="AmountPaid" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="AmountRemaining" class="col-lg-2 control-label"></label>
            <div class="col-lg-10">
                <input type="number" asp-for="AmountRemaining" class="form-control"/>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Tenants" class="col-lg-2 control-label"></label>
            <div class="col-lg-10">
                <select asp-for="TenantId" asp-items="Model.Tenants" class="form-control">
                    <option value="Model.TenantId">All</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Comments" class="col-lg-2 control-label"></label>
            <div class="col-lg-10">
                <textarea class="form-control" rows="3" asp-for="Comments"></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="reset" class="btn btn-default">Cancel</button>
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </fieldset>
</form>