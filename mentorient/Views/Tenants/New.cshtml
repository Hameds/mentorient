@model Tenant
@{
    ViewData["Title"] = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New</h2>
<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <form method="post" asp-action="Save" asp-controller="Tenants">
            <div asp-validation-summary="All" class="text-Validation"></div>
            <div class="form-group">
                <!--<div asp-validation-summary="All" class="text-danger"></div>-->
                <div class="col-md-6">
                    <label asp-for="FirstName" class="control-label"></label>
                    <div class="">
                        <input asp-for="FirstName" class="form-control" placeholder="tenants first name" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <label asp-for="LastName" class="control-label"></label>
                    <div class="">
                        <input asp-for="LastName" class="form-control" placeholder="tenants last name" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-6">
                    <label asp-for="Address" class="control-label"></label>
                    <div class="">
                        <input asp-for="Address" class="form-control" placeholder="tenants address" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <label class="control-label">Phone Number</label>
                    <div class="">
                        <input type="text" class="form-control" id="PhoneNumber" name="PhoneNumber" placeholder="tenants phone number" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-6">
                    <label class="control-label">Email</label>
                    <div class="">
                        <input type="text" class="form-control" id="Email" name="Email" placeholder="tenants email">
                    </div>
                </div>
                <div class="col-md-6">
                    <label asp-for="DateOfBirth" class="control-label"></label>
                    <div class="">
                        <input asp-for="DateOfBirth" class="form-control" placeholder="tenants date of birth" />
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-6">

                    <label asp-for="City" class="control-label"></label>
                    <div class="">
                        <input asp-for="City" class="form-control" placeholder="tenants city" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <label asp-for="ZipCode" class="control-label"></label>
                    <div class="">
                        <input asp-for="ZipCode" class="form-control" placeholder="tenants postal code/zip" />
                        <span asp-validation-for="ZipCode" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-6">
                    <label asp-for="State" class="control-label">State</label>
                    <div class="">
                        <input asp-for="State" class="form-control" placeholder="tenants state" />
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <label class="control-label">Country</label>
                    <div class="">
                        <input type="text" class="form-control" id="Country" name="Country" placeholder="tenants country">
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <button class="btn btn-success btn-lg btn-block" style="margin-top: 10px;">Create Tenant</button>
            </div>
        </form>
    </div>
</div>

