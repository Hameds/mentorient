
@{
    ViewData["Title"] = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New</h2>
<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <form method="post" asp-action="Save" asp-controller="Tenants">
            <div class="form-group">
                <div class="col-md-6">
                    <label class=" control-label">First Name</label>
                    <div class="">
                        <input type="text" class="form-control" id="FirstName" name="FirstName" placeholder="tenants first name">
                    </div>
                </div>
                <div class="col-md-6">
                    <label class="control-label">Last Name</label>
                    <div class="">
                        <input type="text" class="form-control" id="LastName" name="LastName" placeholder="tenants last name">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-6">
                    <label class="control-label">Address</label>
                    <div class="">
                        <input type="text" class="form-control" id="Address" name="Address" placeholder="tenants address">
                    </div>
                </div>
                <div class="col-md-6">
                    <label class="control-label">Phone Number</label>
                    <div class="">
                        <input type="text" class="form-control" id="PhoneNumber" name="PhoneNuber" placeholder="tenants phone number">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-6">
                    <label class="control-label">Email</label>
                    <div class="">
                        <input type="text" class="form-control" id="Email" name="Email" placeholder="tenants email">
                    </div>
                </div>
                <div class="col-md-6">
                    <label class="control-label">Date of Birth</label>
                    <div class="">
                        <input type="date" class="form-control" id="DateOfBirth" name="DateOfBirth" placeholder="tenants date of birth">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-6">

                    <label class="control-label">City</label>
                    <div class="">
                        <input type="text" class="form-control" id="City" name="City" placeholder="tenants city">
                    </div>
                </div>
                <div class="col-md-6">
                    <label class="control-label">Postal Code/Zip</label>
                    <div class="">
                        <input type="text" class="form-control" id="PostalCode" name="PostalCode" placeholder="tenants postal code/zip">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-6">
                    <label class="control-label">State</label>
                    <div class="">
                        <input type="text" class="form-control" id="State" name="State" placeholder="tenants state">
                    </div>
                </div>
                <div class="col-md-6">
                    <label class="control-label">Country</label>
                    <div class="">
                        <input type="text" class="form-control" id="Country" name="Country" placeholder="tenants country">
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <button class="btn btn-success btn-lg btn-block" style="margin-top: 10px;">Create Tenant</button>
            </div>
        </form>
    </div>
</div>

